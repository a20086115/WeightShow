/* pages/my/sponsor.wxss */
.container {
  padding: 30rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.banner {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.card-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.03);
}

.card-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.card-button {
  width: 80% !important;
  background: #07c160;
  color: #fff;
  border-radius: 100rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.thank-msg {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  color: #666;
  font-size: 26rpx;
}

/* 添加赞赏码样式 */
.reward-qr {
  width: 400rpx;
  margin: 20rpx 0;
}