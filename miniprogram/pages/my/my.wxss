/* pages/center/center.wxss */
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.avatar-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 50%; /* 圆形头像 */
  background: white;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%; /* 圆形图片 */
}