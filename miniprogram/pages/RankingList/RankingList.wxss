/* miniprogram/pages/RankingList.wxss */

page {
  background: linear-gradient(180deg, #f0f9ff 0%, #ffffff 100%);
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

/* 排行榜容器 */
.rank-container {
  padding: 20rpx;
  padding-bottom: 40rpx;
  background: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: 10rpx;
}

/* 前三名展示区 */
.top-three {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 30rpx 20rpx 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  gap: 12rpx;
}

.rank-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
  min-width: 0;
}

/* 第一名 */
.rank-first {
  order: 2;
  padding: 25rpx 20rpx;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 215, 0, 0.25);
  transform: scale(1.05);
  z-index: 3;
}

/* 第二名 */
.rank-second {
  order: 1;
  padding: 22rpx 18rpx;
  background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(192, 192, 192, 0.25);
  transform: scale(0.98);
  z-index: 2;
}

/* 第三名 */
.rank-third {
  order: 3;
  padding: 22rpx 18rpx;
  background: linear-gradient(135deg, #cd7f32 0%, #e6a85c 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(205, 127, 50, 0.25);
  transform: scale(0.98);
  z-index: 2;
}

.rank-medal {
  position: absolute;
  top: -20rpx;
  right: -10rpx;
  font-size: 60rpx;
  z-index: 10;
}

.rank-avatar-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.rank-avatar {
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.rank-crown {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4444;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.rank-crown.first {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff4444 100%);
  width: 50rpx;
  height: 50rpx;
  font-size: 28rpx;
}

.rank-info {
  text-align: center;
  width: 100%;
}

.rank-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 8rpx;
  box-sizing: border-box;
  text-align: center;
}

.rank-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #188be4;
  display: flex;
  align-items: baseline;
  justify-content: center;
  white-space: nowrap;
  line-height: 1;
  flex-wrap: nowrap;
}

.rank-value text {
  font-size: 48rpx;
  display: inline-block;
}

.rank-unit {
  font-size: 24rpx;
  margin-left: 4rpx;
  color: #666666;
  display: inline-block;
  vertical-align: baseline;
}

/* 普通排名列表 */
.rank-list {
  margin-top: 0;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.rank-normal {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 24rpx;
  margin-bottom: 8rpx;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s;
  height: 80rpx;
  box-sizing: border-box;
}

.rank-normal.hidden {
  display: none;
}

.rank-normal:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.rank-number {
  width: 50rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #999999;
  flex-shrink: 0;
  line-height: 1;
}

.rank-avatar-small {
  width: 64rpx !important;
  height: 64rpx !important;
  margin: 0 20rpx 0 0;
  flex-shrink: 0;
  display: block;
  border: none !important;
  overflow: hidden;
}

.rank-avatar-small view {
  border: none !important;
}

.rank-avatar-small .van-image__img {
  border: none !important;
  border-radius: 50% !important;
}

.rank-info-normal {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  min-width: 0;
  height: 100%;
}

.rank-name-normal {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
  line-height: 1;
}

.rank-value-normal {
  font-size: 26rpx;
  color: #188be4;
  font-weight: bold;
  display: inline-flex;
  align-items: baseline;
  flex-shrink: 0;
  white-space: nowrap;
  line-height: 1;
}

.rank-value-normal text {
  font-size: 32rpx;
}

.rank-unit-small {
  font-size: 22rpx;
  margin-left: 4rpx;
  color: #999999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}
